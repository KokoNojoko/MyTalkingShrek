<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    android:id="@+id/frameLayout"
    tools:context=".PetFragment">

    <TextView
        android:id="@+id/lblHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY TALKING BABY SHREK"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="50sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="316dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgStart1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/startup"
                android:layout_marginBottom="110dp"/>
            <ImageView
                android:id="@+id/hungryShrek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shrek_eating"
                android:layout_marginBottom="110dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/thirstyShrek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shrek_drinking"
                android:layout_marginBottom="110dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/washingShrek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shrek_bathing"
                android:layout_marginBottom="110dp"
                android:visibility="gone"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/Food"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="20dp"
                tools:src="@drawable/hunger" />

            <ImageButton
                android:id="@+id/Drink"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                tools:src="@drawable/thirst" />

            <ImageButton
                android:id="@+id/Wash"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                tools:src="@drawable/clean" />


        </LinearLayout>
    </LinearLayout>
</FrameLayout>